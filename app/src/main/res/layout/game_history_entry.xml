<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/game_history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/game_history_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="10sp"/>
    </LinearLayout>

    <android.widget.ImageButton
        android:id="@+id/game_history_qr"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_qr_code_2_50"
        android:background="@null"
        android:focusable="false"
        android:tint="@null" />

    <android.widget.ImageButton
        android:id="@+id/game_history_rename"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_drive_file_rename_outline_50"
        android:background="@null"
        android:tint="@null"
        android:focusable="false"/>

    <android.widget.ImageButton
        android:id="@+id/game_history_delete"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_delete_forever_50"
        android:background="@null"
        android:tint="@null"
        android:focusable="false"/>
</LinearLayout>